{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "moduleResolution": "node", /* Critical for finding 'tsup' */
    "esModuleInterop": true,
    "declaration": true,
    "strict": true
  },
  "include": ["src", "tsup.config.ts"], /* explicitly include the config file */
  "exclude": ["node_modules", "dist"]
}